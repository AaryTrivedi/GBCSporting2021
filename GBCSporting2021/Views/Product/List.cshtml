@model List<Product>
@{
    ViewData["Title"] = "All Products";
}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<h3>Products</h3>
<a class="btn btn-primary" asp-controller="Product" asp-action="Add">Add Product</a>
@if (Model.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Code</th>
                <th scope="col">Name</th>
                <th scope="col">Price</th>
                <th scope="col">Release Date</th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (Product product in Model)
            {
                <tr>
                    <td>@product.Code</td>
                    <td>@product.Name</td>
                    <td>$@product.Price</td>
                    <td>@product.ReleaseDate</td>
                    <td>
                        <a asp-action="Edit" asp-controller="Product" asp-route-identifier="@product.ProductId" class="btn btn-primary">Edit</a>
                    </td>
                    <td>
                        <a asp-action="Delete" asp-controller="Product" asp-route-identifier="@product.ProductId" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <hr />
    <h3>No Products Found</h3>
}
