@model Product
@{
    ViewData["Title"] = "Add Product";
}

<h3>Add Product</h3>

@*<div asp-validation-summary="All"></div>*@

<form method="post" asp-controller="Product" asp-action=@ViewBag.Action>
    <div class="form-group">
        <label asp-for="Code">Code</label>
        <input class="form-control" asp-for="Code" placeholder="Email" />
        <span class="text-danger" asp-validation-for="Code"></span>
    </div>
    <div class="form-group">
        <label asp-for="Name">Name</label>
        <input class="form-control" asp-for="Name" placeholder="Name" />
        <span class="text-danger" asp-validation-for="Name"></span>
    </div>
    <div class="form-group">
        <label asp-for="Price">Price</label>
        <input class="form-control" asp-for="Price" placeholder="Price" />
        <span class="text-danger" asp-validation-for="Price"></span>
    </div>
    <div class="form-group">
        <label asp-for="ReleaseDate">Release Date</label>
        <input class="form-control" asp-for="ReleaseDate" placeholder="Date" type="datetime-local" value="@DateTime.Now.ToString("s")" />
        <span class="text-danger" asp-validation-for="ReleaseDate"></span>
    </div>
    <input type="hidden" asp-for="ProductId" />
    <div class="form-group">
        <button class="btn btn-primary">Save</button>
        <a asp-action="List" asp-controller="Product" class="btn btn-primary">Cancel</a>
    </div>
</form>