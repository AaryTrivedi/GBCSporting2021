@model Incident
@{ 
    ViewData["Title"] = "Delete Incident";
}

<form method="post" asp-action="Delete" asp-controller="Incident">
    <h3>Are you sure you want to delete the incident @Model.IncidentId</h3>
    <input type="hidden" asp-for="IncidentId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <button class="btn btn-dark">Cancel</button>
</form>