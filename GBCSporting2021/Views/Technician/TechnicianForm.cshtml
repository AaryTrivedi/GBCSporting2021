@model Technician
@{
    ViewData["Title"] = "Add Technician";
}

<h3>Add Product</h3>

@*<div asp-validation-summary="All"></div>*@

<form method="post" asp-controller="Technician" asp-action=@ViewBag.Action>
    <div class="form-group">
        <label asp-for="Name">Name</label>
        <input class="form-control" asp-for="Name" placeholder="Name" />
        <span class="text-danger" asp-validation-for="Name"></span>
    </div>
    <div class="form-group">
        <label asp-for="Email">Email</label>
        <input class="form-control" asp-for="Email" placeholder="Email" />
        <span class="text-danger" asp-validation-for="Email"></span>
    </div>
    <div class="form-group">
        <label asp-for="Phone">Phone</label>
        <input class="form-control" asp-for="Phone" placeholder="Phone" />
        <span class="text-danger" asp-validation-for="Phone"></span>
    </div>
    <input type="hidden" asp-for="TechnicianId" />
    <div class="form-group">
        <button class="btn btn-primary">Save</button>
        <a asp-action="List" asp-controller="Technician" class="btn btn-primary">Cancel</a>
    </div>
</form>