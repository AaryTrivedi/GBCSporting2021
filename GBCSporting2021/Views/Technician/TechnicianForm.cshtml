@model Technician
@{
    ViewData["Title"] = "Add Technician";
}

<h3>Add Product</h3>

<div asp-validation-summary="All"></div>

<form method="post" asp-controller="Technician" asp-action=@ViewBag.Action>
    <div class="form-group">
        <label asp-for="Name">Name</label>
        <input class="form-control" asp-for="Name" placeholder="Name" />
    </div>
    <div class="form-group">
        <label asp-for="Email">Email</label>
        <input class="form-control" asp-for="Email" placeholder="Email" />
    </div>
    <div class="form-group">
        <label asp-for="Phone">Phone</label>
        <input class="form-control" asp-for="Phone" placeholder="Phone" />
    </div>
    <div class="form-group">
        <button class="btn btn-primary">Save</button>
        <button class="btn btn-primary">Cancel</button>
    </div>
</form>