@model Incident

@{
    ViewData["Title"] = "Edit Incident";
}

<h3>Add Incident</h3>

@*<div asp-validation-summary="All"></div>*@

<form method="post" asp-controller="TechIncident" asp-action="EditIncident">
    <div class="form-group">
        <label asp-for="CustomerId">Customer</label>
        @Model.Customer.FirstName @Model.Customer.LastName
        <select class="d-none form-control" asp-for="CustomerId">
            <option value="@Model.CustomerId">@Model.Customer.FirstName @Model.Customer.LastName</option>
        </select>
        <span class="text-danger" asp-validation-for="CustomerId"></span>
    </div>
    <div class="form-group">
        <label asp-for="ProductId">Product</label>
        @Model.Product.Name
        <select class="d-none form-control" asp-for="ProductId">
            <option value="@Model.ProductId">@Model.Product.Name</option>
        </select>
        <span class="text-danger" asp-validation-for="ProductId"></span>
    </div>
    <div class="form-group">
        <label asp-for="Title">Title</label>
        @Model.Title
        <input class="d-none form-control" value="@Model.Title" asp-for="Title" placeholder="Enter title here" />
        <span class="text-danger" asp-validation-for="Title"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description">Description</label>
        <textarea class="form-control" asp-for="Description" placeholder="Describe incident here"></textarea>
        <span class="text-danger" asp-validation-for="Description"></span>
    </div>
    <div class="form-group">
        <label asp-for="DateOpened">Date Opened</label>
        @Model.DateOpened
        <input class="d-none form-control" asp-for="DateOpened" type="datetime-local" value="@Model.DateOpened.ToString("s")" />
        <span class="text-danger" asp-validation-for="DateOpened"></span>
    </div>
    <div class="form-group">
        <label asp-for="TechnicianId">Technician</label>
        @Model.Technician.Name
        <select class="d-none form-control" asp-for="TechnicianId">
            <option value="@Model.TechnicianId">@Model.Technician.Name</option>
        </select>
        <span class="text-danger" asp-validation-for="TechnicianId"></span>
    </div>
    <div class="form-group">
        <label asp-for="DateClosed">Date Closed</label>
        <input class="form-control" asp-for="DateClosed" type="datetime-local" value="" />
        <span class="text-danger" asp-validation-for="DateClosed"></span>
    </div>
    <input type="hidden" asp-for="IncidentId" />
    <div class="form-group">
        <button class="btn btn-primary">Save</button>
        <a asp-action="List" asp-controller="TechIncident" class="btn btn-primary">Cancel</a>
    </div>
</form>