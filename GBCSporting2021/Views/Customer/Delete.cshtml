@model Customer
@{
    ViewData["Title"] = "Delete Customer";
}

<form method="post" asp-action="Delete" asp-controller="Customer">
    <h3>Are you sure you want to delete customer @(Model.FirstName + " " + Model.LastName)?</h3>
    <input type="hidden" asp-for="CustomerId" />
    <button class="btn btn-danger" type="submit">Delete</button>
    <a asp-action="List" asp-controller="Customer" class="btn btn-dark">Cancel</a>
</form>
